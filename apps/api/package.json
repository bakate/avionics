{
  "name": "@workspace/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch --env-file=.env src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "pnpm typecheck && tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/index.js --sourcemap --external:pg-native --external:fsevents",
    "start": "node dist/index.js",
    "check": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "kill": "lsof -ti:3000 | xargs kill -9"
  },
  "dependencies": {
    "@effect/platform": "catalog:effect3",
    "@effect/platform-node": "catalog:effect3",
    "@workspace/application": "workspace:*",
    "@workspace/config": "workspace:*",
    "@workspace/domain": "workspace:*",
    "@workspace/infrastructure": "workspace:*",
    "dotenv": "^17.2.3",
    "effect": "catalog:effect3"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@faker-js/faker": "catalog:",
    "@types/node": "catalog:node25",
    "@workspace/biome-config": "workspace:*",
    "@workspace/prettier-config": "workspace:*",
    "@workspace/tsconfig": "workspace:*",
    "@workspace/vitest-config": "workspace:*",
    "msw": "^2.12.10",
    "tsx": "^4.19.2",
    "typescript": "catalog:",
    "vitest": "catalog:vitest3"
  }
}
