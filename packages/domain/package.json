{
  "name": "@workspace/domain",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./errors": "./src/errors.ts",
    "./events": "./src/events.ts",
    "./flight": "./src/flight/flight.ts",
    "./inventory": "./src/flight/flight-inventory.ts",
    "./kernel": "./src/kernel.ts",
    "./booking": "./src/booking/booking.ts",
    "./passenger": "./src/booking/passenger.ts",
