{
  "name": "@workspace/infrastructure",
  "version": "0.1.0",
  "description": "Infrastructure layer for Avionics system",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./config": "./src/config.ts",
    "./infrastructure-config": "./src/config/infrastructure-config.ts",
    "./connection": "./src/db/connection.ts",
    "./schema": "./src/db/schema.ts",
    "./errors": "./src/errors.ts",
    "./event-bus": "./src/events/event-bus.ts",
    "./outbox-processor": "./src/events/outbox-processor.ts",
    "./transactional-outbox": "./src/events/transactional-outbox.ts",
    "./currency-converter.gateway": "./src/gateways/currency-converter.gateway.ts",
    "./notification-gateway": "./src/gateways/notification-gateway.ts",
    "./payment-gateway": "./src/gateways/payment-gateway.ts",
    "./booking-queries": "./src/queries/booking-queries.ts",
    "./inventory-queries": "./src/queries/inventory-queries.ts",
    "./booking.repository": "./src/repositories/postgres-booking.repository.ts",
    "./inventory.repository": "./src/repositories/postgres-inventory.repository.ts",
    "./ticket.repository": "./src/repositories/postgres-ticket.repository.ts",
    "./unit-of-work": "./src/repositories/unit-of-work.ts",
    "./audit-logger": "./src/services/audit-logger.ts",
    "./health-check": "./src/services/health-check.ts",
    "./shutdown-manager": "./src/services/shutdown-manager.ts"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -b",
    "test": "vitest run",
    "test:integration": "vitest run src/test/integration/repositories",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "prettier --write \"**/*.{json,ts,tsx,md,mdx,yaml,yml}\" --cache --cache-location .cache/.prettiercache",
    "migrate": "tsx scripts/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "pnpm migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@effect/experimental": "catalog:effect3",
    "@effect/opentelemetry": "catalog:effect3",
    "@effect/platform": "catalog:effect3",
    "@effect/sql": "catalog:effect3",
    "@effect/sql-pg": "catalog:effect3",
    "@polar-sh/sdk": "^0.42.5",
    "@workspace/application": "workspace:*",
    "@workspace/config": "workspace:*",
    "@workspace/domain": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "effect": "catalog:effect3",
    "pg": "^8.17.2",
    "resend": "^6.9.1"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@faker-js/faker": "catalog:",
    "@fast-check/vitest": "catalog:",
    "@types/node": "catalog:node25",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "catalog:vitest4",
    "@workspace/prettier-config": "workspace:*",
    "@workspace/tsconfig": "workspace:*",
    "@workspace/vitest-config": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "prettier": "catalog:",
    "testcontainers": "^11.11.0",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vitest": "catalog:vitest4"
  }
}
